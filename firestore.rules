rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Règles pour la collection "products"
    match /products/{productId} {

      // Tout le monde peut lire les produits
      allow read: if true;

      // Tout le monde peut mettre à jour UNIQUEMENT les champs purchased et purchasedAt
      allow update: if request.resource.data.keys().hasOnly(['purchased', 'purchasedAt', 'id', 'name', 'category', 'description', 'price', 'priority', 'image', 'url'])
                    && request.resource.data.purchased is bool;

      // Personne ne peut créer ou supprimer des produits
      // (seulement via initFirestore.html ou Firebase Console)
      allow create: if false;
      allow delete: if false;
    }
  }
}
